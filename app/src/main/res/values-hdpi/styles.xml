<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="dimen_60dp" />
    <style name="App_ButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_four</item>
        <item name="android:elevation">@dimen/dimen_1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">@dimen/dimen_20dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_20dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_20dp</item>
        <item name="android:height">@dimen/margin_57dp</item>
    </style>

    <style name="App_EditTextStyle">
        <item name="android:textColor">@color/secondaryNeutral1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:textColorHint">@color/secondaryNeutral2</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>